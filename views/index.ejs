<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  <body class="bg-slate-900 text-white">
    <div class="main min-h-screen flex flex-col items-center py-10 px-4">
      
      <!-- Form Section -->
      <div class="form w-full max-w-xl bg-zinc-800 rounded-lg shadow-lg p-6 mb-10">
        <h2 class="text-2xl font-semibold mb-4 text-white">Create New Task</h2>
        <form action="/create" method="POST" class="space-y-4">
          <input
            name="title"
            type="text"
            placeholder="Title goes here"
            required
            class="w-full px-4 py-2 bg-zinc-700 text-white rounded-md outline-none focus:ring-2 focus:ring-blue-500"
          />
          <textarea
            name="details"
            placeholder="Write your task details"
            required
            class="w-full px-4 py-2 bg-zinc-700 text-white rounded-md outline-none resize-none h-32 focus:ring-2 focus:ring-blue-500"
          ></textarea>
          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 transition-colors py-2 rounded-md font-medium"
          >
            Submit
          </button>
        </form>
      </div>

      <!-- Task List Section -->
      <div class="tasks grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 w-full max-w-6xl">
        <% if (files.length > 0) { %>
          <% files.forEach(function(val) { %>
            <div class="task bg-zinc-800 p-4 rounded-lg shadow-md hover:shadow-xl transition duration-300">
              <h1 class="text-xl font-semibold tracking-tight mb-2"><%= val %></h1>
              <a class="text-blue-400 hover:underline" href="/file/<%= val %>">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <h1 class="text-3xl text-center col-span-full text-white">No tasks yet</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
